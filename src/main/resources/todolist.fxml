<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.atif.learnintellijplugins.controller.TodoListController">
    <center>
        <ScrollPane>
            <TextArea fx:id="todoListTextArea" editable="false" />
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <TextField fx:id="textField" promptText="Enter a to-do item" />
            <Button text="Add To-Do" onAction="#addTodo" />
        </HBox>
    </bottom>
</BorderPane>
